<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Entries</h1>

<table>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New Entry', new_entry_path %>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <% @entries.each do |entry| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="word">
          <h1><%= entry.word %></h1>
        </td>
        <td class="pronunciation">
          <%= entry.pronunciation %>
        </td>
        <td class="definition">
          <%= entry.definition %>
        </td>
        <td class="example">
          <%= entry.example %>
        </td>
        <td class="image">
          <%= image_tag(entry.image_url, class: 'list_image') %>
        </td>
        <td class="actions">
          <ul>
            <li><%= link_to 'Show', entry %></li>
            <li><%= link_to 'Edit', edit_entry_path(entry) %></li>
            <li><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
